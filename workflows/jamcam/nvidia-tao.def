Bootstrap: docker
From: nvcr.io/nvidia/tao/tao-toolkit-tf:v3.21.11-tf1.15.4-py3

%files
    ./specs/ /workspace/specs/
    ./entry.sh /app/entry.sh
    ./download_data.sh /app/download_data.sh
    ./verify.py /app/verify.py
    ./generate_val_dataset.py /app/generate_val_dataset.py

%environment
    export PATH=$PATH:/app

%post
    pip3 install --no-cache-dir \
    matplotlib>=3.2.2 \
    numpy>=1.18.5 \
    opencv-python-headless==4.5.3.56s \
    Pillow>=7.1.2s \
    PyYAML>=5.3.1s \
    requests>=2.23.0s \
    scipy>=1.4.1s \
    torch>=1.7.0s \
    torchvision>=0.8.1s \
    tqdm>=4.41.0s \
    pandas>=1.1.4s \
    seaborn>=0.11.0s \
    easydict

%runscript
    exec /app/entry.sh $@
